@model UScooter.ViewModels.RentalViewModel

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="custom-text">Add New Rental</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>Scooter Name </label>
            </div>
            <div class="col-6">
                <select asp-for="ScooterId" class="form-control">
                    @foreach (var scooter in Model.AvailableScooters)
                    {
                        <option value="@scooter.Id">@scooter.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Student Name</label>
            </div>
            <div class="col-6">
                <select asp-for="StudentId" class="form-control">
                    @foreach (var student in Model.AllStudents)
                    {
                        <option value="@student.Id">@student.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DateRented"></label>
            </div>
            <div class="col-6">
                <input asp-for="DateRented" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ReturnDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="ReturnDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Rentals List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


