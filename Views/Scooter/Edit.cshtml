@model UScooter.Models.Scooter

@{
    ViewData["Title"] = "Update";
}

<br />
<h2 class="custom-text">Edit Scooter Info</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Color"></label>
            </div>
            <div class="col-6">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PhysicalCondition"></label>
            </div>
            <div class="col-6">
                <input asp-for="PhysicalCondition" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="AvailabilityStatus"></label>
            </div>
            <div class="col-6">
                <select asp-for="AvailabilityStatus" class="form-control">
                    <option selected="selected" value="Available">Available</option>
                    <option value="Rented">Rented</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Scooter List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


