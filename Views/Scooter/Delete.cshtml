@model UScooter.Models.Scooter

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3 class="custom-text">Delete Confirmation</h3>
<br />

<div class="alert alert-danger">
    <h5>Are you sure you want to delete this scooter -  @Html.DisplayFor(model => model.Name)?</h5>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">No</a>
    </form>
</div>